{% extends 'base.html.twig' %}

{% block title %}
	Mes annonces
{% endblock %}

{% block body %}
	<div class="container">
		<h1>
			Liste des annonces
		</h1>
		<div class="card container">
			{% for announcement in announcements %}
				<ul class="list-unstyled card p-3 m-3">
					<li>
						<div class="d-flex justify-content-between">
							<h2>{{announcement}}</h2>
							<div class="boutons">
								<a class="btn btn-warning" href="{{path('announcement_modify', {id:announcement.id})}}">Modifier l'annonce</a>
								<a class="btn btn-primary" href="{{path('announcement_show', {id:announcement.id})}}">Consulter l'annonce</a>
							</div>
						</div>
						<div class="d-flex justify-content-center">
							{% for request in announcement.requests %}
								<a class="btn btn-primary mx-2" href="#">
									Répondre à
									{{request.adopter}}
								</a>
							{% endfor %}
						</div>
					</li>
				</ul>
			{% endfor %}
		</div>
	</div>
{% endblock %}
