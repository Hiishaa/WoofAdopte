{% extends 'base.html.twig' %}

{% block title %}Hello ImageController!
{% endblock %}

{% block body %}
	{{ parent()}}
	<h1 class="text-center mb-5 mt-3">Ajouter image</h1>
	<div class="container">
		<div class="row justify-content-center m-auto w-75">
			{{ form_start(imageForm) }}
			<div class="form-group mb-3">
				{{ form_row(imageForm.imageFile) }}
			</div>
			<div class="form-group mb-3">
				{{ form_row(imageForm.dog) }}
			</div>

			<div class="d-flex justify-content-center">
				<button type="submit" class="btn btn-warning w-25  m-auto">Valider</button>
			</div>
			{{ form_end(imageForm) }}
		</div>
	</div>
{% endblock %}
