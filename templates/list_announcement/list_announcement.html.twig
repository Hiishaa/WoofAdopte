{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<section class="container">
		<div class="d-flex flex-wrap justify-content-between">
			{% for annonce in annonces %}

				<article class="my-5 p-3 col-5 bg-body-secondary">
					<div class="text-center">
						{% for image in annonce.getDogsImages(true) %}
							<img src="{{ asset(image.path) }}" alt="">
						{% endfor %}
					</div>
					<h1 class="text-center">{{annonce.title}}</h1>
					<div class="d-flex justify-content-around my-3">
						<p>Chiens disponibles :{{annonce.dogs|length}}</p>
						<p>Races disponibles :
							{% for dog in annonce.dogs %}
								{% set loopDog = loop %}
								{% if not dog.isAdopted %}
									{% for race in dog.races %}
										{{race.name -}}
										{%- if not loop.last or not loopDog.last %},
										{% endif %}
									{% endfor %}
								{% endif %}
							{% endfor %}
						</p>
					</div>
					<div class="d-flex justify-content-between align-items-center">
						<p class="m-0">Mis Ã  jour :
							{{annonce.updatedAt|date("m/d/Y")}}</p>
						<a href="{{path('app_annonce',{id:annonce.id})}}" class="btn btn-warning">Consulter</a>
					</div>

				</article>
			{% endfor %}
		</div>
	</section>
{% endblock %}
