{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	{{ form_start(form) }}
	<div class="d-flex container justify-content-around align-items-center">
		{{ form_row(form.isLof) }}
		<div class="text-nowrap">
			{{ form_row(form.isAdopted) }}
		</div>
		{{ form_row(form.race) }}
		<button type="submit" class="btn btn-warning">Valider</button>
	</div>

	{{ form_end(form) }}
	<section class="container">
		<div class="d-flex flex-wrap justify-content-between">
			{% for annonce in annonces %}
				<article class="my-5 p-3 col-5 bg-body-secondary">
					<div class="text-center">
						{% for image in annonce.getDogsImages(true)|slice(0, 3) %}
							<img src="{{ vich_uploader_asset(image) }}" alt="" class="listImg">
						{% endfor %}
					</div>
					<h1 class="text-center">{{annonce.title}}</h1>
					<div class="d-flex justify-content-around my-3">
						<p>Chiens disponibles :{{annonce.getAdoptableDogs()|length}}</p>
						<p>Races disponibles :
							{% for dog in annonce.getAdoptableDogs() %}
								{% set loopDog = loop %}
								{% for race in dog.races %}
									{{race.name -}}
									{%- if not loop.last or not loopDog.last %},
									{% endif %}
								{% endfor %}
							{% endfor %}
						</p>
					</div>
					<div class="d-flex justify-content-between align-items-center">
						<p class="m-0">Mis Ã  jour :
							{{annonce.updatedAt|date("m/d/Y")}}</p>
						<a href="{{path('app_annonce',{id:annonce.id})}}" class="btn btn-warning">Consulter</a>
					</div>

				</article>
			{% endfor %}
		</div>
	</section>
{% endblock %}
