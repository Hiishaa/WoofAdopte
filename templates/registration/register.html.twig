{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
{{ parent()}}
    <h1 class="text-center mb-5 mt-3">Inscription</h1>
<div class="container">
<div class="row justify-content-center m-auto w-75">
    {{ form_start(registrationForm) }}
            <div class="form-group mb-3">
        {{ form_row(registrationForm.email) }}
        </div><div class="form-group mb-3">
        {{ form_row(registrationForm.plainPassword, {
        }) }}
        </div>
    <div class="form-group mb-3">
        {{ form_row(registrationForm.firstName) }}
        </div>
        <div class="form-group mb-3">
        {{ form_row(registrationForm.lastName) }}
        </div>

        <div class="form-group mb-3">
        {{ form_row(registrationForm.city) }}
        </div>
        <div class="form-group mb-3">
        {{ form_row(registrationForm.department) }}
        {{ form_row(registrationForm.agreeTerms) }}
        </div>
        <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-warning w-25  m-auto">S'inscrire</button>
        </div>
    {{ form_end(registrationForm) }}
</div>
</div>
{% endblock %}
