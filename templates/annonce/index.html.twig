{% extends 'base.html.twig' %}

{% block title %}Annonce
	{{annonce.title}}
{% endblock %}

{% block body %}
	<section class="container mt-5">
		<div class="d-flex justify-content-between">
			<h1 class="font-weight-bold">Portée de
				{{annonce.title }}</h1>
		</div>
		{% for dog in annonce.dogs %}
			<div class="shadow px-3 rounded">
				<div class="d-flex justify-content-between mt-5">
					<h2 class="text-warning">{{ dog.name }}</h2>
					{% if dog.isLof == false %}
						<p class="btn btn-warning pe-none">Non L.O.F</p>
					{% else %}
						<p class="btn btn-warning pe-none">L.O.F</p>
					{% endif %}
					{% if dog.isAdopted == true %}
						<p class="btn btn-warning pe-none">Déjà adopté</p>
					{% endif %}
				</div>
				<div class="d-flex">
					{% for image in dog.images %}
						<div class="">
							<img src="{{ asset(image.path) }}" alt="" class="me-5">
						</div>
					{% endfor %}
				</div>
				<div class="bg-light px-3 rounded mt-3 mb-3">
					<ul class="list-unstyled">
						<li class="d-flex">
							<p class="col-2">Race</p>
							{% for race in dog.races %}

								<p>{{race.name}}</p>
							{% endfor %}
						</li>
						<li class="d-flex">
							<p class="col-2">Accepte les autres animaux</p>
							{% if dog.isPetFriendly == true %}
								<p>Oui</p>
							{% else %}
								<p>Non</p>
							{% endif %}
						</li>
						<li class="d-flex">
							<p class="col-2">Antécédents</p>
							<p>{{dog.background}}</p>
						</li>
						<li class="d-flex">
							<p class="col-2">Description</p>
							<p>{{dog.description}}</p>
						</li>
					</ul>
				</div>
			</div>
		</div>
	{% endfor %}
	<div>
		<p class="mt-5">Je souhaite plus d'informations sur :</p>
		<ul class="list-unstyled d-flex justify-content-around">
			{% for dog in annonce.dogs %}
				<li class="mt-3">
					<a href="#" class="btn btn-outline-secondary">{{dog.name}}</a>
				</li>
			{% endfor %}
		</ul>
		<div class="text-center">
			<a href="#" class="btn btn-warning">Répondre à l'annonce</a>
		</div>
	</div>
